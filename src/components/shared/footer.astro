---
import { NAVIGATION_LINKS, SOCIAL_LINKS, OTHER_LINKS } from "@/lib/config";
import Hashtag from "@/assets/svgs/hashtag.astro";
import Icon from "../bases/icon.astro";
---

<footer
  class="footer border-t border-primary-content/80 dark:border-primary-content/20 py-6 bg-[#F6F6F6]"
>
  <div class="container">
    <div class="flex flex-col md:flex-row md:justify-between gap-8 py-8">
      <div class="flex-1 min-w-[200px]">
        <h2 class="text-2xl font-bold mb-2">Winnicode News</h2>
        <p class="text-sm text-gray-500 max-w-xs">
          Craft narratives that ignite inspiration, knowledge, and
          entertainment.
        </p>
      </div>
      <div class="flex flex-1 flex-wrap gap-8 justify-end">
        <div>
          <h3 class="font-semibold mb-2 text-[20px]">Company</h3>
          <ul class="space-y-1">
            <li>
              <a href="/about" class="link link-hover">About us</a>
            </li>
            <li>
              <a href="/authors" class="link link-hover">Authors</a>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2 text-[20px]">Categories</h3>
          <ul class="space-y-1">
            <li>
              <a href="/categories/teknologi" class="link link-hover"
                >Teknologi</a
              >
            </li>
            <li>
              <a href="/categories/politik" class="link link-hover"
                >Politik</a
              >
            </li>
            <li>
              <a href="/categories/olahraga" class="link link-hover"
                >Olahraga</a
              >
            </li>
            <li>
              <a href="/categories/seni" class="link link-hover"
                >Seni</a
              >
            </li>
            <li>
              <a href="/categories/otomotif" class="link link-hover"
                >Otomotif</a
              >
            </li>
            <li>
              <a href="/categories/ventures" class="link link-hover"
                >Ventures</a
              >
            </li>
            <li>
              <a href="/categories/startups" class="link link-hover"
                >Startups</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold mb-2 text-[20px]">Social</h3>
          <ul class="space-y-1">
            <li>
              <a
                href="https://twitter.com"
                class="link link-hover"
                target="_blank">Twitter</a
              >
            </li>
            <li>
              <a
                href="https://www.linkedin.com"
                class="link link-hover"
                target="_blank">LinkedIn</a
              >
            </li>
            <li>
              <a
                href="https://www.facebook.com"
                class="link link-hover"
                target="_blank">Facebook</a
              >
            </li>
            <li>
              <a
                href="https://github.com"
                class="link link-hover"
                target="_blank">GitHub</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div
      class="border-t w-full pt-4 mt-4 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500"
    >
